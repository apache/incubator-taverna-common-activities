#require("title")
#produce("selectedFile")
<!doctype html>
<html>
  <head>
      <title></title>
  </head>
  <body>

       <script type="text/javascript" src="$pmrpcUrl"></script>

       <script type="text/javascript">

         function reply() {
           pmrpc.call({
             destination : "publish",
             publicProcedureName : "reply",
             params : ["OK", {"selectedFile" : document.myform.selectedFile.value}],
             onSuccess : function() {document.getElementsByTagName('body')[0].innerHTML='<h1>Data submitted</h1>';},
             onFailure: function() {document.getElementsByTagName('body')[0].innerHTML='<h1>Data submission failed</h1>';}
           });
	       return true;
         }
         
         function cancel() {
           pmrpc.call({
             destination : "publish",
             publicProcedureName : "reply",
             params : ["Cancelled", {}]
           });
	       return true;
         }

       </script>
  
  <h2></h2>
    <form name="myform">
      <input type="file" name="selectedFile"/><br />
      <input type="button" value="Cancel" onClick = "cancel()"/>
      <input type="button" value="Submit" onClick = "reply()"/>
    </form> 
  </body>
</html>

